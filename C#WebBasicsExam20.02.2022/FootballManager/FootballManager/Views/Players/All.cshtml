<h1 class="text-center mt-2">All Players</h1>
<div class="row mt-2 mb-4">
    <div class="player col-6 col-lg-3 game-player">
        {{foreach}}
        {
        <div>
            <img src="{{ImageUrl}}"
                 class="player-img-top img-fluid player-image">
            <div class="player-body">
                <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                    title="{{Description}}">
                    "{{FullName}}"
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">{{Position}}</li>
                    <li class="list-group-item">
                        <span class="speed-stat">{{Speed}}</span><span class="endurance-stat">{{Endurance}}</span>
                    </li>
                </ul>
                <form method="post" action="/Players/AddToCollection?playerId={{PlayerId}}">
                    <button type="submit" name="AddToCollection" value="your_value" class="btn btn-block btn-primary">Add to Collection</button>
                </form>
            </div>
        </div>
        }
    </div>
</div>
